@page
@model HCAMiniEHR.Pages.Appointments.IndexModel

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-event me-2"></i>Appointments</h2>
    <a asp-page="Create" class="btn btn-primary d-flex align-items-center gap-2">
        <i class="bi bi-plus-lg"></i> Add Appointment
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Date</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Appointments)
            {
                <tr>
                    <td>
                        <div class="fw-bold text-primary">@a.Patient?.FullName</div>
                    </td>
                    <td>@a.Doctor?.Name</td>
                    <td>
                        <i class="bi bi-clock me-1 text-muted"></i>
                        @a.AppointmentDate.ToString("dd MMM yyyy")
                    </td>
                    <td>
                        @{
                            var badgeClass = a.Status switch
                            {
                                "Scheduled" => "bg-info text-dark",
                                "Completed" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@a.Status</span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-page="Edit" asp-route-id="@a.AppointmentId" class="btn btn-outline-warning btn-sm shadow-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@a.AppointmentId" class="btn btn-outline-danger btn-sm shadow-sm ms-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
