@page "{id:int}"
@model HCAMiniEHR.Pages.Appointments.DeleteModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2><i class="bi bi-trash me-2 text-danger"></i>Delete Appointment</h2>
<hr />

@if (Model.Appointment != null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to delete this appointment? This action cannot be undone.
        <strong>Any associated lab orders will also be deleted.</strong>
    </div>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">Review Appointment Details</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Patient</dt>
                <dd class="col-sm-9 fw-bold">@Model.Appointment.Patient?.FullName</dd>

                <dt class="col-sm-3 text-muted">Doctor</dt>
                <dd class="col-sm-9">@Model.Appointment.Doctor?.Name</dd>

                <dt class="col-sm-3 text-muted">Date</dt>
                <dd class="col-sm-9"><i class="bi bi-calendar-event me-1"></i> @Model.Appointment.AppointmentDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-3 text-muted">Status</dt>
                <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Appointment.Status</span></dd>
            </dl>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Appointment!.AppointmentId" />
        <div class="d-flex align-items-center">
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash me-1"></i> Confirm Delete
            </button>
            <a asp-page="Index" class="btn btn-outline-secondary ms-3">
                <i class="bi bi-arrow-left me-1"></i> Cancel and Go Back
            </a>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger shadow-sm">
        <i class="bi bi-x-circle-fill me-2"></i>
        Appointment not found or already deleted.
        <a asp-page="Index" class="alert-link ms-2">Return to List</a>
    </div>
}
