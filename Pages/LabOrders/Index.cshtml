@page
@model HCAMiniEHR.Pages.LabOrders.IndexModel

@{
    ViewData["Title"] = "Lab Orders";
}

<h1>Lab Orders</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Order</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Test Name</th>
            <th>Status</th>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LabOrders) {
        <tr>
            <td>@item.LabOrderId</td>
            <td>@item.TestName</td>
            <td>@item.Status</td>
            <td>@item.Appointment?.Patient?.FullName</td>
            <td>@item.Appointment?.Doctor?.Name</td>
            <td>
                <!-- Edit/Delete could be added here -->
            </td>
        </tr>
}
    </tbody>
</table>
