@page
@using HCAMiniEHR.Pages.Patients
@model IndexModel
@{
    ViewData["Title"] = "Patients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people me-2"></i>Patients</h2>
    <a asp-page="Create" class="btn btn-primary d-flex align-items-center gap-2">
        <i class="bi bi-person-plus"></i> Add New Patient
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Full Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Phone</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
    <tbody>
        @foreach (var patient in Model.Patients)
        {
            <tr>
                <td>@patient.FullName</td>
                <td>@patient.Gender</td>
                <td>@patient.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@patient.Phone</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@patient.PatientId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@patient.PatientId">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>